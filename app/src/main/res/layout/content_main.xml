<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.abhinavboyed.workingmemoryapp.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/trainingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's start Training"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/readyButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="40dp"
        />

    <Button
        android:id="@+id/checkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="168dp"
        android:layout_marginTop="14dp"
        android:onClick="userCheck"
        android:text="Check"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
         />

    <Button
        android:id="@+id/readyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="61dp"
        android:layout_marginTop="17dp"
        android:onClick="userReady"
        android:text="Ready"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trainingTextView" />


    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/readyButton"
        android:layout_margin="30dp"
        android:paddingLeft="80dp"

        >


        <EditText
            android:id="@+id/editText1"
            android:layout_width="53dp"
            android:layout_height="51dp"
            android:ems="10"
            android:inputType="numberSigned"
            />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="53dp"
            android:layout_height="51dp"
            android:ems="10"
            android:inputType="numberSigned"
            />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="53dp"
            android:layout_height="51dp"
            android:ems="10"
            android:inputType="numberSigned"
            />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="53dp"
            android:layout_height="54dp"
            android:ems="10"
            android:inputType="numberSigned"
            tools:ignore="MissingConstraints"
            />


    </android.support.v7.widget.LinearLayoutCompat>



</android.support.constraint.ConstraintLayout>
